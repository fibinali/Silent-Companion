<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SilentCompanion" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.SilentCompanion" parent="Base.Theme.SilentCompanion" />
    <!-- Normal Mode-->

    <style name="screen">
        <item name="android:background">#eeeeee</item>
    </style><style name="screen1">
        <item name="android:background">@color/white</item>
    </style>

    <style name="text">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#5b5b5b</item>
    </style>
    <style name="heading">
        <item name="android:textColor">#5b5b5b</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text2">
        <item name="android:textColor">#5b5b5b</item>
        <item name="android:textColorHint">#5b5b5b</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/buttons</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="radiobutton">
        <item name="android:textColor">#000000</item>
        <item name="android:buttonTint">#242222</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#eeeeee</item> <!-- Toolbar background color -->
        <item name="colorPrimaryDark">#eeeeee</item> <!-- Status bar color -->
        <item name="colorAccent">#000000</item> <!-- Accent color -->
        <item name="titleTextColor">#5b5b5b</item>
        <item name="colorControlNormal">#000000</item>
    </style>
    <style name="cardview">
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>
    <style name="boxes">
        <item name="android:background">@drawable/boxes</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#5b5b5b</item>
    </style>
    <style name="CustomSwitch" >
        <item name="android:thumb">@drawable/custom_thumb</item> <!-- Customize thumb drawable -->
        <item name="android:track">@drawable/custom_track</item> <!-- Customize track drawable -->
    </style>
    <style name="location">
    <item name="tint">@color/MainColor</item>
    <item name="android:src">@drawable/ic_marker</item>
    </style>
    <style name="close">
    <item name="tint">@color/grey</item>
    <item name="android:src">@drawable/ic_close</item>
    <item name="android:background">#eeeeee</item>
    </style>
    <style name="delete">
    <item name="tint">@color/MainColor</item>
    <item name="android:src">@drawable/btndelete</item>
    <item name="android:background">#eeeeee</item>
    </style>
    <style name="view">
        <item name="android:background">@color/LightGray</item>
    </style>

    <!-- Title Style -->
    <style name="PrivacyPolicyTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Body Text Style -->
    <style name="PrivacyPolicyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>